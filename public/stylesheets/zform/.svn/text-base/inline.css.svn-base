/* Styles for form controls where labels are in line with the input elements */
/* Set the class to the parent to .inlineLabels */
.inlineLabels .zField{
}
.inlineLabels label,
.inlineLabels .label{
  float:left;
  margin:.3em 0 0 0; padding:0;
  line-height:100%;
  /* user prefs */
  width:30%; 
  font-weight:bold;
}

.inlineLabels .zFieldDiv {
  float: left;
  width: 69%;
}

.inlineLabels .zFieldDiv .textInput,
.inlineLabels .zFieldDiv .fileInput,
.inlineLabels .zFieldDiv textarea,
.inlineLabels .selectInput,
.inlineLabels .zFieldDiv .checkboxInput {
  width: 100%;
  float: left;
  padding: 0px;
  margin: 0px;
}

.inlineLabels .selectInputInline {
  width: auto;
}

.inlineLabels .formHint{
  clear:both;
  /* user prefs */
  color:#999;
  margin:.5em 0 0 30%; padding:3px 0;
  font-size:80%;
}

/* inlineLabels esthetics */
.inlineLabels .formHint strong{
  padding:0 0 0 14px; 
  background:url(/images/zform/icon_alert.png) 0 0 no-repeat;
  display:inline-block;
}