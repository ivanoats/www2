/* Styles for form controls where labels are in line with the input elements */
/* Set the class to the parent to .inlineLabels */
.inlineLabels .zField{
}
.inlineLabels label,
.inlineLabels .label{
  float:left;
  margin:.3em 0 0 0; padding:0;
  line-height:100%;
  /* user prefs */
  width:30%; 
  font-weight:bold;
}

.inlineLabels .textInput,
.inlineLabels .fileInput{
  float:left;
  /* user prefs */
  width:68%;
  border:2px solid #e1dbce;
}
.inlineLabels .fileInput > input{
}

.inlineLabels .selectInput{
  float:left;
  /* user prefs */
  width:69%;
  border:2px solid #b7ada1;
}

.inlineLabels textarea{
  float:left;
  width:68%;
  /* user prefs */
  border:2px solid #dfdfdf;
  height:12em;
}

.inlineLabels .checkboxInput{
  float:left;
  /* user prefs */
}

.inlineLabels .formHint{
  clear:both;
  /* user prefs */
  color:#999;
  margin:.5em 0 0 30%; padding:3px 0;
  font-size:80%;
}

/* inlineLabels esthetics */
.inlineLabels .formHint strong{
  padding:0 0 0 14px; 
  background:url(/images/zform/icon_alert.png) 0 0 no-repeat;
  display:inline-block;
}