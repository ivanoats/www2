<h1>Editing redirect</h1>

<% form_for(@redirect) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :slug %><br />
    <%= f.text_field :slug %>
  </p>
  <p>
    <%= f.label :url %><br />
    <%= f.text_field :url %>
  </p>
  <p>
    <%= f.label :notes %><br />
    <%= f.text_area :notes %>
  </p>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @redirect %> |
<%= link_to 'Back', redirects_path %>
