<%= javascript_tag "
$(function() { 
$('#account_tabnav ul').addClass('ui-tabs-nav ui-helper-reset ui-helper-clearfix ui-widget-header ui-corner-all');

$('#account_tabnav li').addClass('ui-state-default ui-corner-top').hover(
	function() {
		$(this).addClass('ui-state-hover');
	},
	function() {
		$(this).removeClass('ui-state-hover');
	});

})
"%>

<%   
render_tabnav :account, 
              :generate_css => false do 
  add_tab() do |i|
    i.named 'Dashboard'
    i.links_to( {:controller => 'account', :action => 'manage'} )
  end

  add_tab() do |i|
    i.named 'Settings'
    i.links_to( {:controller => 'account', :action => 'edit'} )
  end
  
  add_tab() do |i|
    i.named 'Billing'
    i.links_to( {:controller => 'account', :action => 'payments'} )
  end
  
  add_tab() do |i|
    i.named 'Websites'
    i.links_to( {:controller => 'account', :action => 'hosting'} )
  end

end 
%>


