render_tabnav :admin, 
              :generate_css => true do 
    
  # this generates a tab for every controller in your app
  # you'll probably want to delete this and
  # add tabs one by one as shown below
  
  add_tab do |t|
   t.named 'Dashboard'
   t.links_to :controller => 'admin'
  end
  
  %w(Accounts Domains Products Redirects Servers Tags Tickets Users).each do |name|
    add_tab do |t|
      t.named name.camelize
      t.titled "Go to #{name.camelize}"
      t.links_to send("hash_for_#{name.downcase}_path")
    end if url_options_authenticate?(send("hash_for_#{name.downcase}_path"))
  end 
  
  add_tab do |t|
    t.named 'WHM Users'
    t.links_to :controller => :whmapuser   
  end
           
  add_tab do |t|
    t.named 'WHM Orders'
    t.links_to :controller => :whmaphostingorder   
  end
  
  add_tab do |t|
    t.named 'WHM Invoices'
    t.links_to :controller => :whmapinvoice   
  end
  
