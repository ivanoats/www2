<div id="cart">
  <p>Your Shopping Cart</p>
  <table style="border-width:2px; border-style:dotted; border-spacing: 5px;">
    <tr>
      <th>Description</th>
      <th>Unit Price</th>
      <th>#</th>
      <th>Total Cost</th>
    </tr>
    <% if !@cart.cart_items.empty? %>
      <% for cart_item in @cart.cart_items %>
    <tr>
      <td>
        <% line_width = 45 %>
        <%= simple_format(word_wrap(h(cart_item.name) , :line_width => line_width )) %><br>
        <%= simple_format(word_wrap(h(cart_item.description), :line_width => line_width )) %>
      </td>
      <td><%= number_to_currency(cart_item.unit_price) %></td>
      <td><%= h(cart_item.quantity) %> <%= h(cart_item.quantity_unit) %></td>
      <td><%= number_to_currency(cart_item.unit_price * cart_item.quantity) %></td>
    </tr>
      <% end %>
    <% else %>
    <tr style="border:2px; border-style:dotted;">
      <td colspan="4">Your cart is empty.</td>
    </tr>
    <% end %>
    
  </table>
</div>