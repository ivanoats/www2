<h1>Editing ticket</h1>

<%= error_messages_for :ticket %>

<% form_for(@ticket) do |f| %>
  <p>
    <b>Subject</b><br />
    <%= f.text_field :subject %>
  </p>

  <p>
    <b>Description</b><br />
    <%= f.text_area :description %>
  </p>

  <p>
    <b>Domain name</b><br />
    <%= f.text_field :domain_name %>
  </p>

  <p>
    <b>First name</b><br />
    <%= f.text_field :first_name %>
  </p>

  <p>
    <b>Last name</b><br />
    <%= f.text_field :last_name %>
  </p>

  <p>
    <b>Phone</b><br />
    <%= f.text_field :phone %>
  </p>

  <p>
    <b>Timezone</b><br />
    <%= f.text_field :timezone %>
  </p>

  <p>
    <b>Priority</b><br />
    <%= f.text_field :priority %>
  </p>

  <p>
    <b>Cpanel username</b><br />
    <%= f.text_field :cpanel_username %>
  </p>

  <p>
    <b>Cpanel password</b><br />
    <%= f.text_field :cpanel_password %>
  </p>

  <p>
    <b>Email</b><br />
    <%= f.text_field :email %>
  </p>

  <p>
    <b>Email password</b><br />
    <%= f.text_field :email_password %>
  </p>

  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @ticket %> |
<%= link_to 'Back', tickets_path %>
