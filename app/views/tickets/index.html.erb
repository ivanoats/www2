<h1>Listing tickets</h1>

<table>
  <tr>
    <th>Subject</th>
    <th>Description</th>
    <th>Domain name</th>
    <th>First name</th>
    <th>Last name</th>
    <th>Phone</th>
    <th>Timezone</th>
    <th>Priority</th>
    <th>Cpanel username</th>
    <th>Cpanel password</th>
    <th>Email</th>
    <th>Email password</th>
  </tr>

<% for ticket in @tickets %>
  <tr>
    <td><%=h ticket.subject %></td>
    <td><%=h ticket.description %></td>
    <td><%=h ticket.domain_name %></td>
    <td><%=h ticket.first_name %></td>
    <td><%=h ticket.last_name %></td>
    <td><%=h ticket.phone %></td>
    <td><%=h ticket.timezone %></td>
    <td><%=h ticket.priority %></td>
    <td><%=h ticket.cpanel_username %></td>
    <td><%=h ticket.cpanel_password %></td>
    <td><%=h ticket.email %></td>
    <td><%=h ticket.email_password %></td>
    <td><%= link_to 'Show', ticket %></td>
    <td><%= link_to 'Edit', edit_ticket_path(ticket) %></td>
    <td><%= link_to 'Destroy', ticket, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

